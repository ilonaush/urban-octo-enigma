@import "~js/vars"

*
  font-family $montserrat-regular

html, body, #root
  height 100%

h5
  text-transform uppercase
  text-align center

hr
  display block
  height 1px
  background-color white
  border none
  width 80%
  margin 0 auto

body
  background-image url("/images/bg.jpg")
  background-size contain
  margin 0
  font-family $montserrat-regular

form
  width 400px
  margin 0 auto
  padding 25px 0

  textarea
    min-height 150px
input, select, textarea
  margin 10px
  background-color transparent
  border 1px solid #e3e3e3
  border-radius 30px
  color: #2c2c2c
  line-height normal
  font-size .8571em
  transition color .3s ease-in-out,border-color .3s ease-in-out,background-color .3s ease-in-out
  box-shadow none
  padding 10px 18px
  outline none
  &:focus
    border 1px solid #f96332
img
  max-width 100%


button
  border-width 2px
  font-weight 400
  font-size .8571em
  border-radius: 30px
  line-height 1.35em
  background-color #f96332
  padding 10px
  width 300px
  display block
  color #fff
  border none
  margin 10px auto
  cursor pointer

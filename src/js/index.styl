@import "~js/vars"

*
  font-family $montserrat-regular

html, body, #root
  height 100%

h5
  text-transform uppercase
  text-align center

hr
  display block
  height 1px
  background-color white
  border none
  width 80%
  margin 0 auto

body
  background-image url("/images/bg.jpg")
  background-size contain
  margin 0
  font-family $montserrat-regular

form
  width 400px
  margin 0 auto
  padding 25px 0

  textarea
    min-height 150px

input, select, textarea
  margin 10px
  background-color transparent
  border 1px solid #e3e3e3
  border-radius 30px
  color: #2c2c2c
  line-height normal
  font-size .8571em
  transition color .3s ease-in-out, border-color .3s ease-in-out, background-color .3s ease-in-out
  box-shadow none
  padding 10px 18px
  outline none
  &:focus
    border 1px solid #E58291

img
  max-width 100%

button
  border-width 2px
  font-weight 400
  font-size .8571em
  border-radius: 30px
  line-height 1.35em
  background-color #AAB3E2
  padding 10px
  width 300px
  display block
  color #fff
  border none
  margin 10px auto
  cursor pointer

.table
  background-color white
  display flex
  flex-flow column nowrap
  justify-content space-between
  padding 40px
  .table-row
    border-bottom 1px solid $gray
    height 40px
    display flex
    width 100%
    flex-flow row nowrap

  .table-row-item
    display flex
    flex-flow row nowrap
    flex-grow 1
    flex-basis 0
    padding 0.5em
    word-break break-word

  .table-head
    color #E58291
    font-size 20px
    font-weight 300
    font-family $montserrat-thin
